<%= simple_form_for(@cocktail) do |f| %>
  <%= f.input :name %>
  <%= f.simple_fields_for :doses do |d| %>
    <%= d.association :ingredient, collection: Ingredient.all %>
    <%= d.input :description %>
  <% end %>
  <%= f.input :photo %>
  <%= f.input :photo_cache, as: :hidden %>
  <%= f.button :submit %>
<% end %>

<%= link_to 'Go back', cocktails_path %>


