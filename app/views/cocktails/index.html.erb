<%= render 'partials/navbar', index: true %>
<%= render 'partials/banner', photo: Cocktail.all.sample.photo, index: true %>

<div class="container">
  <% if params[:query].present? %>
    <div class="row">
      <div class="col-xs-12">
        <h3 style="text-align: center; margin-top: 25px; margin-bottom: 0;">your search for '<%= params[:query] %>' returned <%= @cocktails.count %> results.</h3>
      </div>
    </div>
  <% end %>
  <div class="row">    
    <% @cocktails.each do |cocktail| %>
      <div class="col col-xs-12 col-sm-6 col-md-4">
        <div class="card-container align-center">
      
          <div class="card">
            <div class="front" style="background-image: linear-gradient(rgba(0,0,0,0.4), rgba(0,0,0,0.4)), url('<%= cl_image_path cocktail.photo.url(:card) %>')">
              <div class="card-title">
                <h3><%= cocktail.name %></h3>
              </div>
              <div class="stars">
              <h4><%= cocktail.description %></h4>
                <% cocktail.avg_rating.times do %>
                  <span class='glyphicon glyphicon-star'></span>
                <% end %>
              </div>
            </div>
            
            <div class="back">

                <div class="flip-button">
                  <span class="glyphicon glyphicon-repeat"></span>
                </div>

                <div class="back-content">

                  <div class="title">Ingredients</div>

                  <table class="table table-condensed doses">
                  <% cocktail.doses.each do |dose| %>
                    <tr><td class="ingredient"><%= dose.ingredient.name %></td><td class="description text-right"><%= dose.description %></td></tr>
                  <% end %>
                  </table>

                  <div class="go-button">
                    <%= link_to 'more info', cocktail_path(cocktail), class: 'btn btn-default' %>
                  </div>
                  
                </div>

            </div>
          </div>
      
        </div>
      </div>
    <% end %>
  </div>
  <br>
  <br>
  <br>
  <br>
  <br>
  <br>
  <br>
  <br>
  <br>
  <br>
  <br>
</div>

