<%= simple_form_for [@cocktail, @dose], remote: true do |f| %>
  <%= f.association :ingredient, collection: Ingredient.all, disabled: true %>
  <%= f.input :description %>
  <%= f.button :submit %>
  <%= link_to "Delete", cocktail_dose_path(@cocktail),
      method: :delete,
      data: { confirm: "Are you sure?" }, class: 'btn btn-danger' %>
<% end %>


